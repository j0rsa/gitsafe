# Configuration can be overridden with environment variables using the format:
# GITSAFE__<SECTION>__<FIELD> (double underscore for nesting)
# Examples:
#   GITSAFE__SERVER__HOST=0.0.0.0
#   GITSAFE__SERVER__PORT=9090
#   GITSAFE__STORAGE__ARCHIVE_DIR=/tmp/archives

server:
  host: "127.0.0.1"
  port: 8080
  jwt_secret: "change-me-in-production-use-a-long-random-string"

storage:
  archive_dir: "./archives"

scheduler:
  # Cron expression: "sec min hour day_of_month month day_of_week"
  # Default: every hour at minute 0
  cron_expression: "0 0 * * * *"

repositories: [
  - id: "transmission-rpc"
    url: "https://github.com/j0rsa/transmission-rpc"
    enabled: true
  - id: "home-assistant-addons"
    url: "https://github.com/j0rsa/home-assistant-addons"
    credential_id: "j0rsa"
    enabled: true
]

credentials:
  - id: "j0rsa"
    username: "j0rsa"
    password: "password"
    ssh_key: "/home/j0rsa/.ssh/id_rsa"

users:
  - username: "admin"
    # Default password is "admin" - CHANGE THIS IN PRODUCTION
    # Generated with: bcrypt::hash("admin", bcrypt::DEFAULT_COST)
    password_hash: "$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5GyB0Tg8PZfvO"
